@page
@model Shopping.Web.Pages.ConfirmationModel
@{
    ViewData["Title"] = "Confirmation";
}

<div class="container-fluid px-lg-5 py-4">  
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-light px-3 py-2 rounded-3 mb-4 border-0">
                    <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Confirmation</li>
                </ol>
            </nav>
            <div class="card shadow-sm border-0 rounded-4 text-center p-5">
                <div class="text-success fs-1 mb-3">
                    <i class="fa fa-check-circle"></i>
                </div>
                <h2 class="mb-3">Thank you for your order!</h2>
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <p class="lead">@Model.Message</p>
                }
                <p class="text-muted mb-4">
                    You will receive a confirmation email with your order details shortly.
                </p>
                <a asp-page="OrderList" class="btn btn-outline-dark text-white rounded-pill px-4">
                    View My Orders
                </a>
                <hr class="my-4" />
                <p class="text-muted small">
                    Need help? Contact our support team at <strong>501-222-2222</strong>.
                </p>
            </div>
        </div>
    </div>
</div>
