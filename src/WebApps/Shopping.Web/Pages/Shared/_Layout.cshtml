<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eShop Pro</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- Font Awesome 7 (Offline) -->
    <link rel="stylesheet" href="~/fontawesome7/css/all.min.css" />

    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
</head>

<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white fixed-top shadow-sm border-bottom">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">eShop</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mx-auto gap-3">
                        <li class="nav-item"><a class="nav-link active" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/ProductList">Products</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Cart">Cart</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/OrderList">Orders</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Contact">Contact</a></li>
                    </ul>

                    <form class="d-flex search-bar" role="search">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" placeholder="Search products..." aria-label="Search">
                            <button class="btn btn-dark" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        <a class="btn btn-sm btn-dark ms-3 position-relative" asp-page="/Cart">
                            <i class="fas fa-shopping-cart me-1"></i>
                            <span class="d-none d-md-inline">Cart</span>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-light text-dark">
                                0
                            </span>
                        </a>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page Content -->
    <main class="container pt-5 mt-5 pb-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="pt-5 pb-4">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3">
                    <h5>About</h5>
                    <hr>
                    <p>
                        A modern e-commerce solution for stylish, clean, and responsive shopping.
                    </p>
                </div>
                <div class="col-md-2">
                    <h5>Info</h5>
                    <hr>
                    <ul class="list-unstyled">
                        <li><a href="#">Shipping</a></li>
                        <li><a href="#">Returns</a></li>
                        <li><a href="#">Support</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h5>Company</h5>
                    <hr>
                    <ul class="list-unstyled">
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Jobs</a></li>
                        <li><a href="#">Press</a></li>
                        <li><a href="#">Terms</a></li>
                    </ul>
                </div>
                <div class="col-md-5">
                    <h5>Contact</h5>
                    <hr>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-home me-2"></i> eShop Inc, CA</li>
                        <li><i class="fas fa-envelope me-2"></i> support@eshop.com</li>
                        <li><i class="fas fa-phone me-2"></i> +1 (800) 123-4567</li>
                    </ul>
                </div>
            </div>

            <div class="row mt-4 footer-bottom">
                <div class="col-md-6">
                    <a href="#" class="text-muted">Back to top</a>
                </div>
                <div class="col-md-6 text-end">
                    © 2025 eShop Pro. Designed with <i class="fas fa-heart text-danger"></i>.
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts -->
    <script>
        (() => {
            'use strict';
            window.addEventListener('load', () => {
                document.querySelectorAll('.needs-validation').forEach(form => {
                    form.addEventListener('submit', event => {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    });
                });
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
