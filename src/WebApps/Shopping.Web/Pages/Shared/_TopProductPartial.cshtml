@model ProductModel

<div class="card h-100 border-0 shadow-sm rounded-4 bg-white p-4 text-center position-relative transition">

    <!-- Product Image -->
    <a asp-page="ProductDetail"
       asp-route-productId="@Model.Id"
       class="d-block mt-4 mb-3 overflow-hidden rounded-4 product-image-hover">
        <img asp-append-version="true"
             src="~/images/product/@(string.IsNullOrEmpty(Model.ImageFile) ? "placeholder.png" : Model.ImageFile)"
             alt="@Model.Name"
             title="@Model.Name"
             class="img-fluid rounded-4 w-100 product-img"
             loading="lazy" />
    </a>

    <!-- Product Name -->
    <h6 class="fw-semibold text-dark mb-2 fs-5 lh-sm">
        <a asp-page="ProductDetail"
           asp-route-productId="@Model.Id"
           class="text-decoration-none text-dark hover-text-primary"
           title="@Model.Name">
            @Model.Name
        </a>
    </h6>

    <!-- Short Description -->
    <p class="text-muted small mb-3">
        @((Model.Description?.Length ?? 0) > 50 ? Model.Description!.Substring(0, 50) + "..." : Model.Description)
    </p>

    <!-- Price & Action -->
    <div class="d-flex justify-content-center align-items-center gap-3 mt-auto">
        <span class="fw-bold text-danger fs-5">@Model.Price.ToString("F2") $</span>
        <a asp-page="ProductDetail"
           asp-route-productId="@Model.Id"
           class="btn btn-sm btn-outline-dark text-white rounded-pill px-3 shadow-none">
            View
        </a>
    </div>
</div>
