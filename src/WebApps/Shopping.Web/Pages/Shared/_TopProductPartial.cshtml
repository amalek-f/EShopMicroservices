@model ProductModel

<div class="card h-100">
    <div class="card-header bg-success text-uppercase text-center">
        <i class="fa fa-heart"></i> Top product
    </div>
    <a asp-page="ProductDetail" asp-route-productId="@Model.Id">
        <img asp-append-version="true" class="img-fluid border-0 d-block mx-auto" src="~/images/product/@Model.ImageFile" alt="Card image">
    </a>
    <div class="card-body d-flex flex-column justify-content-between">
        <h4 class="card-title text-center">
            <a asp-page="ProductDetail" asp-route-productId="@Model.Id" title="View Product">
                @Model.Name
            </a>
        </h4>
        <div class="row mt-auto text-center">
            <div class="col">
                <p class="btn btn-danger btn-block">@Model.Price $</p>
            </div>
            <div class="col">
                <a asp-page="ProductDetail" asp-route-productId="@Model.Id" class="btn btn-success btn-block">View</a>
            </div>
        </div>
    </div>
</div>

