@page
@model Shopping.Web.Pages.CartModel
@{
    ViewData["Title"] = "Your Cart";
}


<div class="container-fluid px-lg-5 py-4">

    <!-- Header -->
    <section class="bg-white rounded-4 shadow-sm p-4 mb-4">
        <h1 class="fw-semibold display-6">Shopping Cart</h1>
        <p class="text-muted">Review your selected items before proceeding to checkout.</p>
    </section>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded-3 mb-4 border-0">
            <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Orders</li>
        </ol>
    </nav>

    @if (Model.Cart.Items.Any())
    {
        <div class="row g-4">
            <!-- Cart Items Table -->
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table align-middle text-nowrap shadow-sm rounded-4 overflow-hidden">
                        <thead class="text-muted small text-uppercase">
                            <tr class="table-light">
                                <th scope="col">Product</th>
                                <th scope="col" class="d-none d-sm-table-cell">Status</th>
                                <th scope="col" class="text-center">Qty</th>
                                <th scope="col" class="text-end">Total</th>
                                <th scope="col" class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Cart.Items)
                            {
                                <tr class="border-bottom align-middle">
                                    <!-- Product + Name -->
                                    <td class="text-start d-flex border-0 flex-column flex-sm-row align-items-start align-items-sm-center gap-2">
                                        <img src="https://dummyimage.com/50x50/e9ecef/adb5bd.png&text=O"
                                             alt="@item.ProductName"
                                             class="rounded-3"
                                             width="60" height="60"
                                             style="object-fit: cover;" />
                                        <span class="fw-semibold text-break">@item.ProductName</span>
                                    </td>

                                    <!-- Stock status -->
                                    <td class="text-start d-none d-sm-table-cell">
                                        <small class="text-success">In Stock</small>
                                    </td>

                                    <!-- Quantity -->
                                    <td class="text-center">
                                        <input type="number"
                                               class="form-control form-control-sm text-center rounded-pill w-75 mx-auto"
                                               value="@item.Quantity" readonly />
                                    </td>

                                    <!-- Price -->
                                    <td class="text-end fw-semibold">
                                        @{
                                            var itemPrice = item.Price * item.Quantity;
                                        }
                                        @itemPrice.ToString("0.00") $
                                    </td>

                                    <!-- Remove Button -->
                                    <td class="text-end">
                                        <form method="post" asp-page-handler="RemoveToCart" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle" title="Remove">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

            <!-- Summary -->
            <div class="col-lg-4">
                <div class="bg-white rounded-4 shadow-sm p-4">
                    <h5 class="fw-bold mb-3">Order Summary</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items</span>
                        <span>@Model.Cart.Items.Sum(i => i.Quantity)</span>
                    </div>
                    <div class="d-flex justify-content-between border-top pt-2 mt-2">
                        <strong>Total</strong>
                        <strong class="text-primary fs-5">@Model.Cart.TotalPrice.ToString("0.00") $</strong>
                    </div>

                    <a asp-page="CheckOut" class="btn btn-primary w-100 text-white rounded-pill mt-4">
                        Proceed to Checkout <i class="fa fa-arrow-right ms-2"></i>
                    </a>
                    <a asp-page="ProductList" class="btn btn-outline-secondary w-100 rounded-pill mt-3">
                        <i class="fa fa-chevron-left me-2"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty Cart -->
        <div class="text-center py-5 bg-light rounded-4 shadow-sm">
            <i class="fa fa-cart-shopping fa-3x text-muted mb-3"></i>
            <h4 class="fw-semibold">Your cart is empty</h4>
            <p class="text-muted">Browse our collection and add items to your cart.</p>
            <a asp-page="ProductList" class="btn btn-primary text-white btn-lg rounded-pill">
                Shop Now
            </a>
        </div>
    }
</div>
