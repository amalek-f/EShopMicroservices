@page
@model Shopping.Web.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<!-- Main Container -->
<div class="container-fluid px-lg-5 py-4">

    <!-- Hero Section -->
    <section class="bg-white rounded-4 shadow-sm p-4 mb-4">
        <h1 class="display-6 fw-semibold">Contact Us</h1>
        <p class="lead text-muted">We’d love to hear from you! Let us know how we can help.</p>
    </section>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded-3 mb-4 border-0">
            <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Contact</li>
        </ol>
    </nav>


    <!-- Contact Content -->
    <div class="row g-4">
        <!-- Contact Form -->
        <div class="col-lg-8">
            <div class="card border-0 rounded-4 shadow-sm">
                <div class="card-header bg-light border-bottom-0 py-2">
                    <h5 class="fw-semibold mb-0"><i class="fa fa-envelope me-2 text-danger"></i> Contact Form</h5>
                </div>
                <div class="card-body bg-white rounded-bottom-4">
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label fw-semibold">Your Name</label>
                            <input type="text" class="form-control rounded-3" id="name" placeholder="Enter your full name" required />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold">Email Address</label>
                            <input type="email" class="form-control rounded-3" id="email" placeholder="you@example.com" required />
                            <div class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label fw-semibold">Message</label>
                            <textarea class="form-control rounded-3" id="message" rows="6" placeholder="Write your message here..." required></textarea>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary text-white px-4 rounded-pill shadow-sm">
                                <i class="fa fa-paper-plane me-1"></i> Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="col-lg-4">
            <div class="card border-0 rounded-4 shadow-sm">
                <div class="card-header bg-light border-bottom-0 py-2">
                    <h5 class="fw-semibold mb-0"><i class="fa fa-map-marker-alt me-2 text-danger"></i> Our Address</h5>
                </div>
                <div class="card-body bg-white rounded-bottom-4">
                    <p class="mb-3"><i class="fa fa-map-marker-alt text-muted me-2"></i>14 rue Abdelkader Guadouche</p>
                    <p class="mb-3"><i class="fa fa-city text-muted me-2"></i>16000 HYDRA, Algeria</p>
                    <p class="mb-3">
                        <i class="fa fa-envelope text-muted me-2"></i>
                        <a href="mailto:email@example.com" class="text-decoration-none text-dark">email@example.com</a>
                    </p>
                    <p class="mb-0"><i class="fa fa-phone text-muted me-2"></i>+213 56 11 00 00</p>
                </div>
            </div>
        </div>
    </div>
</div>
