@page
@model Shopping.Web.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container-fluid px-lg-5 py-4">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light px-3 py-2 rounded-3 mb-4 border-0">
            <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="Cart">Cart</a></li>
            <li class="breadcrumb-item active" aria-current="page">Checkout</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Order Summary -->
        <div class="col-lg-4 order-lg-2">
            <div class="card shadow-sm rounded-4 border-0">
                <div class="card-body">
                    <h4 class="fw-semibold">Your Cart <span class="badge bg-dark">@Model.Cart.Items.Count</span></h4>
                    <ul class="list-unstyled mt-3">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <li class="d-flex justify-content-between align-items-start border-bottom py-2">
                                <div>
                                    <strong>@item.ProductName</strong><br />
                                    <small class="text-muted">Qty: @item.Quantity</small>
                                </div>
                                <span class="fw-semibold text-danger">$@item.Price.ToString("F2")</span>
                            </li>
                        }
                    </ul>
                    <div class="d-flex justify-content-between mt-3 pt-3">
                        <span class="fw-semibold">Total</span>
                        <span class="fw-bold fs-5 text-success">$@Model.Cart.TotalPrice.ToString("F2")</span>
                    </div>

                    <!-- Promo Code -->
                    <form class="mt-4">
                        <label class="form-label">Promo Code</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Enter code">
                            <button class="btn btn-secondary" type="submit">Apply</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Billing Information -->
        <div class="col-lg-8 order-lg-1">
            <div class="card shadow-sm rounded-4 border-0">
                <div class="card-body p-4">
                    <h3 class="mb-4 fw-bold">Billing Information</h3>
                    <form asp-page-handler="CheckOut" method="post" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.FirstName" class="form-label">First Name</label>
                                <input asp-for="Order.FirstName" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.LastName" class="form-label">Last Name</label>
                                <input asp-for="Order.LastName" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Order.UserName" class="form-label">Username</label>
                            <div class="input-group">
                                <span class="input-group-text">@@</span>
                                <input asp-for="Order.UserName" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Order.EmailAddress" class="form-label">Email (optional)</label>
                            <input asp-for="Order.EmailAddress" type="email" class="form-control" placeholder="you@example.com">
                        </div>

                        <div class="mb-3">
                            <label asp-for="Order.AddressLine" class="form-label">Address</label>
                            <input asp-for="Order.AddressLine" class="form-control" placeholder="1234 Main St" required>
                        </div>

                        <div class="mb-3">
                            <label for="address2" class="form-label">Address 2 (Optional)</label>
                            <input type="text" class="form-control" id="address2" placeholder="Apartment or suite">
                        </div>

                        <div class="row">
                            <div class="col-md-5 mb-3">
                                <label asp-for="Order.Country" class="form-label">Country</label>
                                <select asp-for="Order.Country" class="form-select" required>
                                    <option value="">Choose...</option>
                                    <option>United States</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Order.State" class="form-label">State</label>
                                <select asp-for="Order.State" class="form-select" required>
                                    <option value="">Choose...</option>
                                    <option>California</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="Order.ZipCode" class="form-label">Zip</label>
                                <input asp-for="Order.ZipCode" class="form-control" required>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Payment Section -->
                        <h4 class="mb-3 fw-semibold">Payment</h4>
                        <div class="my-3">
                            <div class="form-check">
                                <input asp-for="Order.PaymentMethod" id="credit" name="paymentMethod" type="radio" value="Credit card" class="form-check-input" checked required>
                                <label class="form-check-label" for="credit">Credit Card</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Order.PaymentMethod" id="debit" name="paymentMethod" type="radio" value="Debit card" class="form-check-input" required>
                                <label class="form-check-label" for="debit">Debit Card</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Order.PaymentMethod" id="paypal" name="paymentMethod" type="radio" value="Paypal" class="form-check-input" required>
                                <label class="form-check-label" for="paypal">PayPal</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.CardName" class="form-label">Name on Card</label>
                                <input asp-for="Order.CardName" class="form-control" required>
                                <small class="text-muted">Full name as displayed on card</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order.CardNumber" class="form-label">Card Number</label>
                                <input asp-for="Order.CardNumber" class="form-control" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Order.Expiration" class="form-label">Expiration</label>
                                <input asp-for="Order.Expiration" class="form-control" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Order.CVV" class="form-label">CVV</label>
                                <input asp-for="Order.CVV" class="form-control" required>
                            </div>
                        </div>

                        <hr class="my-4" />
                        <button class="btn btn-primary text-white btn-lg w-100" type="submit">
                            <i class="fa fa-lock me-2"></i> Complete Purchase
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
