@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<!-- Categories Section -->
<section class="container my-5">
    <div class="rounded-4">
        <h5 class="mb-4 text-uppercase fw-semibold text-dark">
            <i class="fas fa-th-large me-2 text-primary"></i> Shop by Category
        </h5>
        <div class="row text-center g-3">
            @{
                var categories = new[]
                {
            new { Icon = "fa-laptop", Label = "Electronics", Color = "primary" },
            new { Icon = "fa-tshirt", Label = "Clothing", Color = "success" },
            new { Icon = "fa-couch", Label = "Furniture", Color = "warning" },
            new { Icon = "fa-book", Label = "Books", Color = "danger" },
            new { Icon = "fa-basketball-ball", Label = "Sports", Color = "info" },
            };
            }

            @foreach (var category in categories)
            {
                <div class="col-6 col-md-4 col-lg-2">
                    <a href="#" class="text-decoration-none">
                        <div class="rounded-4 shadow-sm bg-white p-4 transition hover-shadow text-center">
                            <i class="fas @category.Icon fa-2x mb-2 text-@category.Color"></i>
                            <div class="fw-medium text-dark">@category.Label</div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- Hero Carousel -->
<section class="container-fluid px-0 my-4">
    <div id="mainCarousel" class="carousel slide carousel-fade rounded-4 overflow-hidden shadow-lg" data-bs-ride="carousel">

        <!-- Slides -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/banner/banner1.png"
                     class="d-block w-100 object-fit-cover"
                     style="height: 400px"
                     loading="lazy"
                     alt="Banner 1" />
            </div>
            <div class="carousel-item">
                <img src="~/images/banner/banner2.png"
                     class="d-block w-100 object-fit-cover"
                     style="height: 400px"
                     loading="lazy"
                     alt="Banner 2" />
            </div>
            <div class="carousel-item">
                <img src="~/images/banner/banner3.png"
                     class="d-block w-100 object-fit-cover"
                     style="height: 400px"
                     loading="lazy"
                     alt="Banner 3" />
            </div>
        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bg-dark bg-opacity-25 rounded-circle p-2" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon bg-dark bg-opacity-25 rounded-circle p-2" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>


<!-- Top 3 Products -->
<section class="container my-5">
    <div class="rounded-4 p-lg-3 pm-0">
        <div class="d-flex align-items-center mb-3">
            <i class="fas fa-heart text-danger me-2 fs-5"></i>
            <h5 class="mb-0 text-uppercase fw-semibold text-body">Top 3 Products</h5>
        </div>
        <div class="row g-4">
            @foreach (var product in Model.ProductList.Take(3))
            {
                <div class="col-12 col-md-4">
                    @await Html.PartialAsync("_TopProductPartial", product)
                </div>
            }
        </div>
    </div>
</section>

<!-- Daily Deals Carousel -->
<section class="container my-5">
    <div class="rounded-4 p-lg-3 pm-0">

        <!-- Section Heading -->
        <h5 class="mb-4 text-uppercase fw-semibold text-dark d-flex align-items-center">
            <i class="fas fa-bolt me-2 text-warning"></i> Daily Deals
        </h5>

        <!-- Horizontal Scroll Products -->
        <div class="d-flex overflow-auto gap-4 px-1 pb-4 scroll-snap-x">

            @foreach (var product in Model.ProductList.Take(8))
            {
                <div class="col-12 col-sm-6 col-lg-3 mb-4">
                    <div class="rounded-4 p-3 shadow-sm bg-white d-flex flex-column h-100">
                        <partial name="_ProductItemPartial" model="@product" />
                    </div>
                </div>
            }

        </div>
    </div>
</section>


<!-- Last Products -->
<section class="container mt-5">
    <div class="rounded-4 p-lg-3 pm-0">
        <div class="d-flex align-items-center mb-3">
            <i class="fas fa-clock text-dark me-2 fs-5"></i>
            <h5 class="mb-0 text-uppercase fw-semibold text-body">Latest Arrivals</h5>
        </div>
        <div class="row g-4 p-2">
            @foreach (var product in Model.ProductList.Take(4))
            {
                <div class="col-12 col-sm-6 col-lg-3 mb-4">
                    <div class="rounded-4 p-3 shadow-sm bg-white d-flex flex-column h-100">
                        <partial name="_ProductItemPartial" model="@product" />
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Best Products -->
<section class="container mt-5 mb-5">
    <div class="rounded-4 p-lg-3 pm-0">
        <div class="d-flex align-items-center mb-3">
            <i class="fas fa-trophy text-success me-2 fs-5"></i>
            <h5 class="mb-0 text-uppercase fw-semibold text-body">Top Rated</h5>
        </div>
        <div class="row g-4 p-2">
            @foreach (var product in Model.ProductList.TakeLast(4))
            {
                <div class="col-12 col-sm-6 col-lg-3 mb-4">
                    <div class="rounded-4 p-3 shadow-sm bg-white d-flex flex-column h-100">
                        <partial name="_ProductItemPartial" model="@product" />
                    </div>
                </div>
            }
        </div>
    </div>
</section>
